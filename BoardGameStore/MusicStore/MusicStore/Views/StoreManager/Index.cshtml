@model IEnumerable<MusicStore.Models.Termekek>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Index</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Név
            </th>
            <th>
                Tipus
            </th>
            <th>
                Ár
            </th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.minden)
        {
            <tr>
                <td>
                    @item.nev
                </td>
                <td>
                    @item.tipus
                </td>
                <td>
                    @item.ar
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>


