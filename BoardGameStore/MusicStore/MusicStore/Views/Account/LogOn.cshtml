@model Mvc3ToolsUpdateWeb_Default.Models.LogOnModel

@{
    ViewBag.Title = "Bejelentkezés";
}
<div id="page-header">
    <img class="hatter-picture" src="~/Content/Images/hatterkep.png" />
    <div class="bejelentkezos-stilus page-width">
        <h2>Bejelentkezés</h2>
        <p>
            Kérem, hogy írja be a felhasználói nevét és jelszavát. @Html.ActionLink("Regisztáljon", "Register") ha nincsen felhasználói fiókja.
        </p>

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        @Html.ValidationSummary(true, "A bejelentkezés nem sikerült. Kérem, hogy javítsa ki a hibákat és próbálja újra.")

        @using (Html.BeginForm("LogOn","Account"))
        {
            <div>
                <fieldset>
                    <legend>Fiók információk</legend>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.UserName)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.Password)
                    </div>
                    <div class="editor-field">
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>

                    <div class="editor-label">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                    <p>
                        <input type="submit" value="Bejelentkezés" />
                    </p>
                </fieldset>
            </div>
        }
    </div>
</div>

